<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnswerButtonStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:background">@drawable/backround_answer_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="VariantButtonStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bacround_variand_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>