<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img_15"
    tools:context=".Menu"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="4 pics 1 word"
            android:textSize="36sp"
            android:textColor="#2196F3"
            android:textStyle="bold"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1.5"
            android:background="@drawable/volume_up_fill0_wght400_grad0_opsz48__1_"
            android:onClick="onVolumeclick"
            tools:ignore="UsingOnClickInXml,SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="_1"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#0F1E25"
            android:id="@+id/_1"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/img_11"
                    />
                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/img_12"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/img_13"
                    />
                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/img_14"
                    />
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_16"
            android:layout_gravity="center"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#03BFB8B8"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="20dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_17"
                android:onClick="onPlayclick"
                tools:ignore="UsingOnClickInXml,SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/img_18"
                android:onClick="onInfoclick"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="20dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="onCloseclick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/img_19"

                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>